package mockinterview.mockinterview__3;

import java.util.Scanner;

public class ArrayProblem {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Ask user for the length of the array
        System.out.println("Enter the length of the Array (n): ");
        int n = sc.nextInt();

        // ‚ùå ERROR FIXED: `new Array[n]` is invalid. Use `new int[n]` instead.
        int[] array = new int[n];

        // Prompt user to enter elements
        System.out.println("Enter the Elements: ");
        for (int i = 0; i < n; i++) {
            array[i] = sc.nextInt(); // Read each integer from input
        }

        System.out.println("Output (sum of first and last digit of each number):");

        // Traverse through array and calculate sum of first and last digit
        for (int i = 0; i < array.length; i++) {
            int number = array[i];
            int lastDigit = number % 10;

            // Get first digit by repeatedly dividing by 10
            int firstDigit = number;
            while (firstDigit >= 10) {
                firstDigit = firstDigit / 10;
            }

            int sum = firstDigit + lastDigit;
            System.out.print(sum + " ");
        }

        sc.close(); // Close the scanner to prevent memory leaks
    }
}
